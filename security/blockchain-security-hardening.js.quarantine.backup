        if (overflowAttempts.length > 0) {
            this.triggerSecurityAlert('OVERFLOW_ATTACK', {
                attempts: overflowAttempts,
                timestamp: Date.now()
            });
        }
        
        if (oracleManipulation.detected) {
            this.triggerSecurityAlert('ORACLE_MANIPULATION', {
